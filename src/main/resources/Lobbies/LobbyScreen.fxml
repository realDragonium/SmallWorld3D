        <Image url="@Background.jpg"/>
    </ImageView>
    <ImageView layoutX="254.0" layoutY="168.0">

        <Image url="@guiLobbyScreen.jpg"/>

        <viewport>
            <Rectangle2D/>
        </viewport>
    </ImageView>
    <Group fx:id="lobbies" layoutY="250" layoutX="400">

    </Group>
    <Button fx:id="back" layoutX="412.0" layoutY="562.0" mnemonicParsing="false" onAction="#terug" prefHeight="30.0"
            prefWidth="130.0" text="Back"/>
    <Button fx:id="host" layoutX="649.0" layoutY="562.0" mnemonicParsing="false" onAction="#hostGame"
            prefHeight="30.0" prefWidth="130.0" text="Host game"/>
