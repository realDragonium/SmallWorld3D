<?import javafx.scene.text.*?>
<Group fx:id="root" style="-fx-background-color: yellow;" xmlns="http://javafx.com/javafx/8"
       xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.InLobbyView">
    <ImageView fitHeight="900.0" fitWidth="1600.0" pickOnBounds="true" preserveRatio="true">
        <Image url="@backgroundLobby.jpg"/>
    </ImageView>
    <ImageView layoutX="254.0" layoutY="168.0" pickOnBounds="true" preserveRatio="true">

        <Image url="@guiLobbyScreen.jpg"/>
    </ImageView>
    <Button fx:id="exit" layoutX="394.0" layoutY="574.0" mnemonicParsing="false" onAction="#exit" prefHeight="30.0"
            prefWidth="130.0" text="Exit lobby"/>
    <Button fx:id="start" layoutX="892.0" layoutY="574.0" mnemonicParsing="false" onAction="#start" prefHeight="30.0"
            prefWidth="130.0" text="Start game"/>
    <GridPane layoutX="394.0" layoutY="252.0" prefHeight="304.0" prefWidth="628.0">
        <Pane layoutX="3.0" opacity="0.58" prefHeight="311.0" prefWidth="638.0" style="-fx-background-color: white;">
            <Text fx:id="Player1" layoutX="50.0" layoutY="70.0">
                <font>
                    <Font size="21.0"/>
                </font>
            </Text>
            <Text fx:id="Player2" layoutX="50.0" layoutY="110.0">
                <font>
                    <Font size="21.0"/>
                </font>
            </Text>
            <Text fx:id="Player3" layoutX="50.0" layoutY="150.0">
                <font>
                    <Font size="21.0"/>
                </font>
            </Text>
            <Text fx:id="Player4" layoutX="50.0" layoutY="190.0">
                <font>
                    <Font size="21.0"/>
                </font>
            </Text>
        </Pane>

        <columnConstraints>
            <ColumnConstraints/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints/>
        </rowConstraints>
    </GridPane>
</Group>
