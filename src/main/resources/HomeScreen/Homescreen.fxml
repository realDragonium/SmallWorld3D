<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane fx:id="root" maxHeight="1080.0" maxWidth="1920.0" prefHeight="1080.0" prefWidth="1920.0"
            xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="View.HomeScreenView">

    <ImageView fitHeight="1080.0" fitWidth="1905.0" layoutX="3.0" layoutY="-1.0">
        <Image url="@Background.jpg"/>
    </ImageView>

    <ImageView fitHeight="230.0" fitWidth="648.0" layoutX="692.0" layoutY="56.0">
        <Image url="@SmallWorldLogo.png"/>
    </ImageView>

    <HBox id="select" layoutX="690.0" layoutY="385.0" onMouseClicked="#goToLobby"
          onMouseEntered="#enterHoverTitle" onMouseExited="#exitHoverTitle">
        <ImageView id="Power" fitHeight="137.0" fitWidth="158.0" layoutX="50.0" layoutY="385.0">
            <Image url="@Blank_Power.png"/>
        </ImageView>
        <Text id="game" text="Start Game">
            <font>
                <Font size="35.0"/>
            </font>
        </Text>
        <ImageView id="Ras" fitHeight="141.0" fitWidth="316.0" layoutX="1200.0" layoutY="381.0">
            <Image url="@Blank_Ras.png"/>
        </ImageView>
    </HBox>

    <HBox id="select" layoutX="690.0" layoutY="609.0"  onMouseClicked="#readGuide"
          onMouseEntered="#enterHoverTitle" onMouseExited="#exitHoverTitle">
        <ImageView id="Power" fitHeight="137.0" fitWidth="158.0" layoutX="795.0" layoutY="609.0">
            <Image url="@Blank_Power.png"/>
        </ImageView>
        <Text id="rules" text="Game Guide">
            <font>
                <Font size="35.0"/>
            </font>
        </Text>
        <ImageView id="Ras" fitHeight="141.0" fitWidth="316.0" layoutX="912.0" layoutY="605.0">
            <Image url="@Blank_Ras.png"/>
        </ImageView>
    </HBox>

    <HBox id="select" layoutX="690.0" layoutY="835.0" onMouseClicked="#logout" onMouseEntered="#enterHoverTitle" onMouseExited="#exitHoverTitle">
