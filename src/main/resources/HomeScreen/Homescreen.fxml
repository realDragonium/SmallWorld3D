            <Image url="@Blank_Power.png"/>
        </ImageView>
        <VBox id="game">
            <padding>
                <Insets bottom="25" left="20" top="50"/>
            </padding>
            <Text text="Logout">
                <font>
                    <Font size="35.0"/>
                </font>
            </Text>
        </VBox>
        <ImageView id="Ras" fitHeight="141.0" fitWidth="316.0" layoutX="906.0" layoutY="831.0">
            <Image url="@Blank_Ras.png"/>
        </ImageView>
    </HBox>

    <ImageView fitHeight="1080.0" fitWidth="1920.0">
        <Image url="@Border_screen.png"/>
    </ImageView>

</AnchorPane>
